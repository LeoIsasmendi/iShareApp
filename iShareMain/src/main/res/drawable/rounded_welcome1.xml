<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#D32F2F" />
            <gradient android:angle="-90" android:startColor="#D32F2F" android:endColor="#D32F2F"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#F44336" />
            <solid android:color="#D32F2F"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#F5F5F5" />
            <gradient android:angle="-90" android:startColor="#FFFFFF" android:endColor="#212121" />
        </shape>
    </item>
</selector>